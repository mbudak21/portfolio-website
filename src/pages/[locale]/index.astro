---
import BaseLayout from '../../layouts/BaseLayout.astro';

import GlassButton from "../../components/Glass-btn.astro";

import { getLangFromUrl, useTranslations } from '../../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export async function getStaticPaths() {
  return [
    { params: { locale: 'en' } },
    { params: { locale: 'tr' } },
    { params: { locale: 'ru' } },
    { params: { locale: 'zh' } },
  ];
}

const pageTitle = t('pageTitle')
---

<BaseLayout pageTitle={pageTitle} lang={lang}>
  
  <div class="wrap">
    <h1 class="center">{t('homePage.h1')}</h1>
    <p class="muted center">{t('homePage.h1.p')}</p>
  </div>

  <div class="wrap center">
    <GlassButton as="a" 
      href={`/${lang}/projects`}
      text={t('homePage.GlassButtonText')}
    />
  </div>
  
  <div class="wrap">
    <h2>{t('homePage.About')}</h2>
    <p class="soft-p">
      {t('homePage.About.p1')}
      {t('homePage.About.p2')} <br><br>
      {t('homePage.About.p3')} <br><br><br><br>
      {t('homePage.About.p4')}
    </p>
  </div>

</BaseLayout>